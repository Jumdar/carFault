<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="goodcar.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="goodcar.main.IndexActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="goodcar.main.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="goodcar.main.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="goodcar.main.ShowActivity"
            android:label="@string/title_activity_show" >
        </activity>
        <activity
            android:name="goodcar.main.InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>
    </application>

</manifest>
